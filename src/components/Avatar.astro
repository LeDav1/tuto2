---
const {link, initial} = Astro.props;

---

<a href={`https://${link}`}>{initial}</a>

<style define:vars={{link}}>
    a {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        width: 3rem;
        height: 3rem;
        background-color: bisque;
        color: #222;
        font-weight: bold;
        font-size: 1.2rem;
        border-radius: 50%;
        text-decoration: none;
        transition: background 0.2s;
        
    }
    a:hover {
        background-color: #90cdf4;
    }
</style>